{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Run Everything",
            "dependsOn": [
                "Npm: start",
                "Django: Run Server"
            ]
        },
        
        {
            "label": "Django: Run Server",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "problemMatcher": [],
            "args": [
                "${workspaceFolder}\\backend\\manage.py",
                "runserver",
                "0.0.0.0:8000",
            ],
            "presentation": {
                "group": "groupA",
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Npm: start",
            "type": "npm",
            "script": "start",
            "path": "${workspaceFolder}\\dashboard-frontend",
            "problemMatcher": [],
            "presentation": {
                "group": "groupA",
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}

